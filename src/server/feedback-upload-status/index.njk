{% from "govuk/components/table/macro.njk" import govukTable %}

{% extends 'layouts/page.njk' %}

{% block content %}
  {{ appHeading({
    text: heading,
    caption: "AI PoC for CFFLD Feedback Analysis"
  }) }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full-width">
      <table class="govuk-table">
        <caption class="govuk-table__caption">Feedback Upload Status</caption>
        <thead class="govuk-table__head">
          <tr class="govuk-table__row">
            <th scope="col" class="govuk-table__header">ID</th>
            <th scope="col" class="govuk-table__header">Redacted feedback</th>
            <th scope="col" class="govuk-table__header">Feedback processed</th>
            <th scope="col" class="govuk-table__header">Status</th>
          </tr>
        </thead>
        <tbody class="govuk-table__body">
          {% for f in model.feedback %}
            <tr class="govuk-table__row">
              <td class="govuk-table__cell">{{ f.createdOn }}</td>
              <td class="govuk-table__cell">{{ f.totalRedacted }}</td>
              <td class="govuk-table__cell">{{ f.totalFeedback }}</td>
              <td class="govuk-table__cell">
                {% if f.status == "RECEIVED" %}
                  <strong class="govuk-tag govuk-tag--grey">Received</strong>
                {% elif f.status == "UPLOADED" %}
                  <strong class="govuk-tag govuk-tag--purple">Uploaded</strong>
                {% elif f.status == "TRIAGED" %}
                  <strong class="govuk-tag govuk-tag--green">Triaged</strong>
                {% elif f.status == "TRIAGING" %}
                  <strong class="govuk-tag govuk-tag--blue">Triaging</strong>
                {% elif f.status == "WARNING" %}
                  <strong class="govuk-tag govuk-tag--yellow">Warning</strong>
                {% elif f.status == "FAILED" %}
                  <strong class="govuk-tag govuk-tag--red">Failed</strong>
                {% endif %}
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
{% endblock %}
